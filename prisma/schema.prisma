// prisma/schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(cuid())
  username  String   @unique
  progress  Int      @default(0)
  works     Json     
  completedAt Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}